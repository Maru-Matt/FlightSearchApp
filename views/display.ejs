<%-include('header')%>
<head>
   <title>Flight Details</title>
</head>

<body>
  <section class="contentWrapper">
    <div class="ticket-card card" style="width: 18rem;">
      <img src="../images/ticket.jpeg" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">Flight Detail</h5>
        <p class="card-text">Flying From <%=cityFrom %> to <%=cityTo%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">From: <%=dateFrom%></li>
        <li class="list-group-item">To <%=dateTo%></li>
        <li class="list-group-item">Will Cost: <%=flightPrice %> $$</li>
      </ul>
      <div class="card-body">
        <a href="<%=link%>" class="card-link">Book this flight</a>
        <a href="/flight" class="card-link"><i class="fa-solid fa-circle-arrow-right"></i></a>
      </div>
    </div>
  </section>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" ></script>
</body>
</html>